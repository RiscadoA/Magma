#version 1.0
#type PIXEL

/*
	Simple 2D text pixel shader.
	Compatible with the Magma::Framework::Graphics::TextRenderer class.
*/

Input in
{
	float2 uvs : IN_0;
};

Output out
{
	float4 color : ATTACHMENT_0;
};

Texture2D texture : TEXTURE;

Shader
{
	float sampled = Sample2D(texture, in.uvs).r;

	if (sampled == 0.0f)
		discard;

	out.color = float4(1.0f, 0.0f, 0.0f, sampled);
};
