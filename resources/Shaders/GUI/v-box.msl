#version 1.0
#type VERTEX

/*
	GUI box element vertex shader.
*/

Input in
{
	float2 position : POSITION;
};

Output out
{
	float4 position : SCREEN_POSITION;
};

ConstantBuffer boxData : BOX_DATA
{
	float44 transform;
	float4 backgroundColor;
	float2 boxSize;
};

Shader
{
	float4 position = float4(in.position.x * boxData.boxSize.x, in.position.y * boxData.boxSize.y, 0.0f, 1.0f);
	out.position = mulvec(boxData.transform, position);
};
