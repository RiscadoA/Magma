#version 1.0
#type PIXEL

/*
	Simple 2D text pixel shader.
	Compatible with the Magma::Framework::Graphics::TextRenderer class.
*/

Input in
{
	float2 uvs : IN_0;
};

Output out
{
	float4 color : ATTACHMENT_0;
};

ConstantBuffer textData : TEXT_DATA
{
	float44 transform;
	float4 backgroundColor;
	float4 foregroundColor;
};

Texture2D font : TEXT_FONT;

Shader
{
	float sampled = Sample2D(font, in.uvs).r;
	out.color = lerp4(textData.backgroundColor, textData.foregroundColor, sampled);
};
