#version 1.0
#type VERTEX

Input in
{
	float4 position : POSITION;
	float4 color : COLOR;
};

Output out
{
	float4 position : SCREEN_POSITION;
	float4 color : OUT_0;
};

ConstantBuffer transform : TRANSFORM
{
	float44 mvp;
};

Shader
{
	out.position = mulvec(transform.mvp, in.position);
	out.color = in.color;
	out.color.r = cos(1.0f);
	out.color.g = 1.0f + out.color.b;
};
