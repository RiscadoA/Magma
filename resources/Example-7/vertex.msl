#version 1.0
#type VERTEX

Input in
{
	float4 position : POSITION;
	float4 color : COLOR;
};

Output out
{
	float4 position : SCREEN_POSITION;
	float4 color : OUT_0;
};

Shader
{
	float4 position;

	position = -float4(in.position.x, in.position.y, in.position.z, 1.0);

	out.position = position;
	out.color = in.color;
};
